{
  "name": "tsyne",
  "version": "0.1.0",
  "description": "Elegant TypeScript wrapper for Fyne - Build beautiful cross-platform desktop UIs with Node.js",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest",
    "test:unit:fast": "jest --config jest.config.unit.js",
    "test:gui": "jest --config jest.config.gui.js",
    "test:coverage": "jest --coverage",
    "test:headed": "TSYNE_HEADED=1 jest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "fyne",
    "ui",
    "gui",
    "desktop",
    "typescript",
    "nodejs",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.0.0",
    "pkg": "^5.8.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "bin/tsyne-bridge-*",
    "bridge",
    "cli",
    "scripts/postinstall.js",
    "README.md",
    "LICENSE",
    "QUICKSTART.md",
    "TESTING.md",
    "ARCHITECTURE.md",
    "PROS_AND_CONS.md",
    "SCREENSHOTS.md",
    "TODO.md"
  ],
  "pkg": {
    "assets": [
      "dist/**/*",
      "bin/tsyne-bridge*"
    ],
    "outputPath": "pkg"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.4",
    "@grpc/proto-loader": "^0.7.15",
    "@msgpack/msgpack": "^3.0.0",
    "@resvg/resvg-js": "^2.6.2",
    "@types/marked": "^5.0.2",
    "buffer-crc32": "^1.0.0",
    "chess.js": "^1.4.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "jimp": "^1.6.0",
    "koffi": "^2.14.1",
    "marked": "^4.3.0",
    "mespeak": "^2.0.2",
    "speaker": "^0.5.5",
    "toml": "^3.0.0"
  },
  "optionalDependencies": {
    "isolated-vm": "^5.0.1"
  }
}
