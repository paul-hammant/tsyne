{
  "name": "tsyne-designer",
  "version": "1.0.0",
  "description": "Self-contained WYSIWYG designer for Tsyne applications",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --testMatch='**/__tests__/unit/**/*.test.ts'",
    "test:e2e": "jest --testMatch='**/__tests__/e2e/**/*.test.ts'",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "tsyne",
    "designer",
    "wysiwyg",
    "gui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^24.10.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  }
}
