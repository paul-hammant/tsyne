{
  "name": "tsyne-designer",
  "version": "1.0.0",
  "description": "Self-contained WYSIWYG designer for Tsyne applications",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js",
    "test": "npm run test:unit && npm run test:gui",
    "test:unit": "jest --testMatch='**/__tests__/unit/**/*.test.ts'",
    "test:roundtrip": "jest --runInBand --testMatch='**/__tests__/roundtrip/**/*.test.ts'",
    "test:gui": "jest --testMatch='**/__tests__/gui/**/*.test.ts'",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:watch": "jest --watch",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:icon": "tauri icon"
  },
  "keywords": [
    "tsyne",
    "designer",
    "wysiwyg",
    "gui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "diff": "^8.0.2",
    "prettier": "^2.8.8",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/cli": "^2.9.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.10.1",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  }
}
